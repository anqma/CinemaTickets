@model CinemaTickets.Domain.Domain_models.DTO.AddToShoppingCartDto

@{
    ViewData["Title"] = "AddToCart";
}

<h1>Add selected ticket to shopping cart</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddToShoppingCart">
            <input type="hidden" asp-for="CinemaTicketId" />
            <div class="form-group">
                <input disabled class="form-control" asp-for="SelectedTicket.MovieTitle" />
            </div>
            <div class="form-group">
                <input type="number" class="form-control" asp-for="Quantity" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>