@model List<CinemaTickets.Domain.Domain_models.CinemaTicket>

@{
    ViewData["Title"] = "Index";
}

<h1>All cinema tickets</h1>

<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="CinemaTickets" asp-action="Create">Add new ticket</a>
    </div>

    @for (int i=0; i< Model.Count; i++)
    {
        var item = Model[i];
        if (i % 3 == 0)
        {
            @:<div class="row">
        }
        <div class="card m-3" style="width: 18rem;">
          <img src="@item.MovieImage" class="card-img-top image-fluid" style="max-width: 100%; height:90%" alt="...">
          <div class="card-body">
            <h5 class="card-title">@item.MovieTitle</h5>
            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
            <a href="/CinemaTickets/AddToCart?CinemaTicketId=@item.Id&CartId=1">Add to cart</a>  
        </div>
        </div>
        if(i % 3 == 2 || i == Model.Count - 1)
        {
            @:</div>
        }
        
    }
</div>
