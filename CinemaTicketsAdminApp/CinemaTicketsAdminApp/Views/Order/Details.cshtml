@model CinemaTicketsAdminApp.Models.Order

<div>Order details</div>


<div class="container">
    <div class="m-3">
        <a class="btn btn-success" >Order for: @Model.OrderedBy.UserName</a>
    </div>

    @for (int i = 0; i < Model.CinemaTickets.Count; i++)
    {
        var item = Model.CinemaTickets.ElementAt(i).CinemaTicket;
        if (i % 3 == 0)
        {
            @:<div class="row">
        }
            <div class="card m-3" style="width: 18rem;">
              <img src="@item.MovieImage" class="card-img-top image-fluid" style="max-width: 100%; height:90%" alt="...">
              <div class="card-body">
                <h3 class="card-title">@item.MovieTitle</h3>
                <h5 class="card-title">@item.TicketPrice</h5>
            </div>
            </div>
        if (i % 3 == 2 || i == Model.CinemaTickets.Count - 1)
        {
            @:</div>
        }

    }
</div>
